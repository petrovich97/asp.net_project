@model IEnumerable<EHotelServices.Models.Usluga>

@{
    ViewBag.Title = "Index";
}

<h2>Usluge hotela</h2>
<hr />
<h3>
    @Html.ActionLink("Kreiraj novu uslugu", "Create")
</h3>
<hr />
<h3>
    @Html.ActionLink("Proveri zahteve","ObradaZahteva")
</h3>
<hr />
<table class="table" style="background-color: aliceblue; opacity: 0.9">
    <tr style="color:darkred">
        <th>
            @Html.DisplayNameFor(model => model.Tip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZaposleniUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GostUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trajanje)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="color:black">
        <td>
            @Html.DisplayFor(modelItem => item.Tip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZaposleniUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GostUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trajanje)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.UslugaId })
        </td>
    </tr>
}

</table>
